{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/src-frontend/*": ["src-frontend/*"],
			"@/src-backend/*": ["src-backend/*"],
			"@/assets/*": ["src-frontend/assets/*"],
			"@/components/*": ["src-frontend/components/*"],
			"@worker-config": ["worker-configuration.d.ts"]
		},
		"target": "es2021",
		"lib": ["es2021", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["@cloudflare/workers-types/2023-07-01", "./worker-configuration"],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src-frontend/**/*", "worker-configuration.d.ts", "vite.config.ts", "src-backend/**/*"]
}
